{% extends 'base.html.twig' %}

{% block title %}Story{% endblock %}

{% block body %}
    <h1>Story</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ story.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ story.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ story.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ story.createdAt ? story.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ story.number }}</td>
            </tr>
            <tr>
                <th>Is_validated</th>
                <td>{{ story.isValidated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ story.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('story_index') }}">back to list</a>

    <a href="{{ path('story_edit', {'id': story.id}) }}">edit</a>

    {{ include('story/_delete_form.html.twig') }}
{% endblock %}
