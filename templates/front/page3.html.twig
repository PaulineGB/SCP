                {% if story.isValidated == true %}
                    {% for i in 10..14 %}
                        <div class="item material-1">
                            <h5 class="cardtitle text-uppercase text-center mt-3"><a class="text-reset text-decoration-none" href="{{ path("story_show", { slug: stories[14].slug }) }}">{{ stories[14].title }}</a></h5>
                            <a href="#">
                                <svg xmlns="http://www.w3.org/2000/svg" class="original">
                                    <image width="100%" height="100%" preserveaspectratio="xMidYMid slice" xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ stories[14].image }}"></image>
                                </svg>
                            </a>
                        </div>
